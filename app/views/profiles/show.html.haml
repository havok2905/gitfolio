%section.-container
  .profile
    %h1= profile[:name]
    %h2= profile[:tagline]
    %dl
      %dt Github:
      %dd= profile[:nickname]
      %dt Current Position:
      %dd= profile[:position]
      %dt Email:
      %dd= profile[:email]
    %section.languages
      %h3 Languages
      %ul
        - profile[:languages].each do |lang|
          %li
            = render "svg/#{lang[:name]}".downcase
            %h4= lang[:name]
      .clearfix
    %section
      %h3 Projects
      - profile[:whitelist].each do |repo|
        .project
          %h4= repo.name
          %p= repo.description
          %p= repo.primary_language
          %a{href: repo.url} code
      .clearfix
