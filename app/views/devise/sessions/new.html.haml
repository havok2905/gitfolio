%section.-home
  .left
    = render 'svg/logo'
  .right
    .headers
      %h1 Gitfolio
      %h2 The Homepage Every Developer Deserves!
    .form.-login
      %h3 Login
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        = f.email_field :email, autofocus: true, placeholder: 'Email'
        = f.password_field :password, autocomplete: 'off', placeholder: 'Password'
        - if devise_mapping.rememberable?
          = f.check_box :remember_me
          = f.label :remember_me
        .actions
          = f.submit 'Log in', class: 'button -default'
          %a{ href: omniauth_authorize_path(:user, :github), class: 'button -constructive' }
            = render 'svg/github'
            Sign in with Github
